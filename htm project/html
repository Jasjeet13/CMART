<body>
    <h1>Product Categories</h1>
    <ul class="categories">
        <li class="uniforms"><a class="category-link" href="#" onclick="showCategory('Uniform')">Uniform</a></li>
        <li class="electrical appliances "><a class="category-link" href="#" onclick="showCategory('Electricity')">Electricity</a></li>
        <li class="stationary"><a class="category-link" href="#" onclick="showCategory('Stationery')">Stationery</a></li>
        <!-- Add more categories as needed -->
    </ul>

    <div id="categoryDisplay">
        <!-- Content for selected category will be displayed here -->
    </div>

    <script>
        // JavaScript for category selection
        function showCategory(category) {
            // Replace this logic with your own content or links
            const categoryDisplay = document.getElementById('categoryDisplay');
            categoryDisplay.innerHTML = `<h2>${category} Products</h2>`;
        }
    </script>
</body>
</html>
